generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum JobStatus {
  Active
  Archived
  Expired
  Deleted
}

model Job {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  job_type    String
  experience  String
  salary      String
  description String
  status      JobStatus @default(Active)
  createdAt   DateTime @default(now())
}